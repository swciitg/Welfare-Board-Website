        crossorigin="anonymous"></script>
    <script>
        async function check_data() {
            let password = document.getElementById("password").value;
            let data = await axios.post(`/${BASE_URI}/login/`, {
                data: { password: password }
            })
            data = data.data;
            if (data == 'True') window.location.href = 'admin';
            else {
                document.getElementById('message').innerHTML = "Wrong Password!";
            }
        }
        const BASE_URI = `<%= base_url %>`

    </script>

</head>

<body">
    <div class="login_container">
        <div class="card bg-light border-dark login_card" style="display: flex;">
            <div class="card-title">
                <h2>Login</h2>
                <h5 style="color: red;" id="message"></h5>
            </div>
            <div class="card-body" style="display:flex;flex-direction:column;">
                <div style="display: flex;margin:5%;">
                    <div style="margin-right: 5%;">Password</div> <input id="password" type="password"
                        class="form-control" />
                </div>
                <button class="btn btn-primary" onclick="check_data()" style="
                    width:max-content;align-self:flex-end;margin-right:5%;">Login</button>
            </div>
        </div>
    </div>
    </body>

</html>